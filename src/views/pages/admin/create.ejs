<%-include ('partialsAdmin/create/headerCreate') -%>
<body>

    <main class="container">
        <section class="crud-container">
            <h3 class="crud__title">CREAR NUEVO ITEM</h3>
            <form class="crud__items" action="">
                <label for="">Categoria:
                    <select name="" id="" >
                        <option value="" disabled selected hidden>Selecionar</option>
                        <option value="figuras">Figuras</option>
                        <option value="remeras">Remeras</option>
                        <option value="llaveros">Llaveros</option>
                    </select></label>
                <label for="">Licencia:
                <select name="" id="" >
                    <option value="" disabled selected hidden>Selecionar</option>
                    <option value="STAR WARS">STAR WARS</option>
                    <option value="POKEMON">POKEMON</option>
                    <option value="HARRY POTTER">HARRY POTTER</option>
                </select></label>   
                <label id=" for="">Nombre del producto:         
                <input type="text" placeholder="Kakashi Hatake Shippuden Saga" size="30px"></label>
                <textarea name="" id="" cols="150" rows="10" placeholder="Descripción del producto"></textarea>
                <div>
                    <label for="">SKU:</label>
                    <input type="text" placeholder="SSK11AB001" size="8px">
                    <label for="">Precio:</label>
                    <input type="text" placeholder="$ 0.000,00" size="8px">
                    <label for="">Stock:</label>
                    <input type="text" placeholder="0" size="3px">
                    <label for="">Descuento:</label>
                    <input type="text" placeholder="0%" size="3px">
                    <label for="">Cuotas:
                    <select name="" id="">
                        <option value="3">3 Cuotas sin interes</option>
                    </select></label>
                    <label  for="">Imágenes:
                    <input id="crud__image" type="file"></label>
                </div>
                <div>
                    <button type="submit">Agrega Producto</button>
                    <button type="reset">Limpiar</button> 
                </div>
                
            </form>            
        </section>

    </main>

    <%-include ('partialsAdmin/create/footerCreate') -%>

</body>
</html>