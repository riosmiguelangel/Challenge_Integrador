<%-include ('partials/item/headerItems') -%>

<body>


    <main class="container">
        <section class="item">
            <picture class="item__img">
                <img src="../../img/star-wars/baby-yoda-1.webp" alt="Figura coleccionable de Baby Yoda">
            </picture>
            <div class="item__content">
                <h4 class="item__licence">STARS WARS</h4>
                <h1 class="item__name">BABY YODA BLUEBALL</h1>
                <p class="item__description">Figura coleccionable de Baby Yoda (Grogu) - The Mandalorian Saga, edición
                    limitada.</p>
                <p class="item__price">$ 1799,99</p>
                <div class="cantidad">

                    <input class="articulo__cantidad-box" type="text" name="quantity" placeholder="0"
                        id="quantity">
                    <div class="boton">
                        <button id="add" class="articulo__boton_sumar">+</button>
                        <button id="subtract" class="articulo__boton_restar">-</button>
                    </div>
                    <button class="item__buy">Agregar al carrito</button>
                </div>
                <div class="item__paypromo">
                    <p class="item__paymethod">Ver métodos de pago </p>
                    <p class="item__promo">&nbsp - 3 CUOTAS SIN INTERÉS</p>
                </div>
            </div>
        </section>
    </main>

    <!--Inicio slider-->
    <section class="slider container glide">
        <h2 class="slider__title">Productos relacionados</h2>
        <div class="glide__track" data-glide-el="track">
            <ul class="slider__items glide__slides">
                <li class="slider__item glide__slide">
                    <article class="card-item">
                        <a class="card-item__link" href="">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="../../img/star-wars/trooper-1.webp"
                                    alt="Figura coleccionable">
                                <img class="card-item__img--back" src="../../img/star-wars/trooper-box.webp"
                                    alt="Figura coleccionable">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence">STAR WARS</p>
                                <h4 class="card-item__name">STORMTROOPER LIGHTSABER</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
                <li class="glide__slide">
                    <article class="card-item">
                        <a class="card-item__link" href="">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="../../img/pokemon/pidgeotto-1.webp"
                                    alt="Figura coleccionable">
                                <img class="card-item__img--back" src="../../img/pokemon/pidgeotto-box.webp"
                                    alt="Figura coleccionable">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence">POKEMON</p>
                                <h4 class="card-item__name">PIDGEOTTO</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
                <li class="glide__slide">
                    <article class="card-item">
                        <a class="card-item__link" href="">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="../../img/harry-potter/luna-1.webp"
                                    alt="Figura coleccionable">
                                <img class="card-item__img--back" src="../../img/harry-potter/luna-box.webp"
                                    alt="Figura coleccionable">
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence">HARRY POTTER</p>
                                <h4 class="card-item__name">LUNA LOVEGOOD LION MASK</h4>
                                <p class="card-item__price">$ 1799,99</p>
                                <p class="card-item__promo">3 CUOTAS SIN INTERÉS</p>
                            </div>
                        </a>
                    </article>
                </li>
            </ul>
        </div>
        <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon class="arrow__slide" icon="tabler:chevron-left"></iconify-icon></button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon class="arrow__slide" icon="tabler:chevron-right"></iconify-icon></button>
          </div>  
    </section>
    <!--Fin slider-->

    <%-include ('partials/item/footerItem')-%>

</body>

</html>