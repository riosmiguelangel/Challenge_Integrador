            <a class="hero__link" href="/shop">Shop</a>
        </article>
    </section>
    <main class="main-container">
        <% collections.forEach( collection => { %>
            <section class="collection container">
                <article class="collection__content">
                    <h3 class="collection__title"><%= collection.licence_name%></h3>
                    <p class="collection__text"><%= collection.licence_description%></p>
                    <a class="collection__link" href="/shop/shop">Ver coleccion</a>
                </article>
                <picture class="collection__cover">
                    <img src="<%= collection.licence_image %>" alt="Figura Coleccionable">
                </picture>
            </section>
        <% }); %>
